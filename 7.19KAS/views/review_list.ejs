            <tbody>
                <%if(list.length == 0) {%>
                    <tr>
                        <td colspan="3">등록된 리뷰가 없습니다.</td>
                    </tr>
                <%}else{
                    for(let i = 0; i < list.length; i++){%>
                        <tr>
                            <td><%=list[i].num%></td>
                            <td><%=list[i].region%></td>
                            <td><%=list[i].type%></td>
                        </tr>
                    <%}
                }%>
            </tbody>
            <input type="submit">
        </table>
    </form>


