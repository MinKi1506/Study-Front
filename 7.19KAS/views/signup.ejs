    <script> //지갑생성하는 js스크립트
        $(document).ready(function(){
            $('#signup').hide();
            $('#create').click(function(){
                $.get(
                    '/get_wallet',
                    function(result, status){
                        if(status == 'success'){
                            $('#floatingWallet').val(result.address).attr('readonly', true); //attr = 속성값을 추가해주는 기능 readonly는 읽기만 가능하게 해준다!
                            $('#signup').show();
                            $('#create').hide();
                        }
                    }
                )
            })
        })
    </script>
